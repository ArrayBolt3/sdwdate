#!/bin/bash

## Copyright (C) 2017 - 2020 ENCRYPTED SUPPORT LP <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

set -e

## run as root
sudo --non-interactive rm --force /run/anondate/tor_certificate_lifetime_set
## run as user sdwdate
sudo --non-interactive rm --force /run/sdwdate/tor_certificate_lifetime_set

sudo --non-interactive rm --force /run/sdwdate/first_success
sudo --non-interactive rm --force /run/sdwdate/clock_jump_do_once

sudo --non-interactive -u sdwdate touch /run/sdwdate/clock_jump_do_once

sudo --non-interactive systemctl --no-pager --no-block restart sdwdate

true "$0: OK"
